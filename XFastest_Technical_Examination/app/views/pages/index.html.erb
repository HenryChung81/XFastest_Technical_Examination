<h1>Blogs</h1>

<div class="row row-cols-1 row-cols-md-2 g-4">
  <% @blogs.each do |blog| %>
    <div class="col">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= blog.name %></h5>
          <p class="card-text">
            最後編輯時間:  <%= time_ago_in_words(blog.updated_at) %>
          </p>
          <p class="card-text">
            is_blog_manager  <%= blog.user.is_blog_manager %>
          </p>
          <%= link_to 'articles', blog_articles_path(blog), class:'btn btn-primary' %>
        </div>
      </div>
    </div>
  <% end %>
</div>