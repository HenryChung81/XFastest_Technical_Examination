<%= form_with(model: [blog, article])  do |form| %>
  <%= form.label :title, '標題', class: 'form-label' %>
  <%= form.text_field :title, class: 'form-control mb-2' %>

  <%= form.label :content, '內容', class: 'form-label' %>
  <%= form.text_area :content, rows:10, class: 'form-control form-control-lg mb-2' %>

  <%= form.submit '儲存草稿', class: 'btn btn-primary' %>
  <%= form.submit '發佈文章', class: 'btn btn-success' %>
<% end %>